!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title
      -if @custom_title
        =@custom_title
      -else
        = succeed ' -' do
          = @item[:title]
        NathanFeaver.com
    -if @item[:description]
      %meta{ :content => @item[:description], :name => 'description' }/
    -@item[:stylesheets].each do |css_link|
      %link{ :href => css_link, :media => "screen", :rel => "stylesheet", :type => "text/css" }/
    %meta{ :content => 'width=device-width', :name => 'viewport' }/
    %meta{ 'http-equiv' => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
    -if @item[:script]
      %script{ type: 'text/javascript', src: @item[:script] }
    / you don't need to keep this, but it's cool for stats!
    %meta{ :content => "nanoc " + Nanoc::VERSION, :name => "generator" }/
    %link{ :href => '/favicon.ico', :rel => 'shortcut icon' }/
    =render '_google_analytics'
  %body

